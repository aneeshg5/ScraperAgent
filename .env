# NVIDIA AI Platform Configuration
NVIDIA_API_KEY=your_nvidia_api_key_here
NIM_ENDPOINT=https://integrate.api.nvidia.com/v1/chat/completions
NVIDIA_VISION_ENDPOINT=https://ai.api.nvidia.com/v1/vlm/microsoft/kosmos-2
NEMO_TOOLKIT_ENDPOINT=https://nemo-api.nvidia.com/v1
LANGCHAIN_NVIDIA_ENDPOINT=https://langchain.nvidia.com/v1

# Hackathon Environment
HACKATHON_MODE=true
GPU_ACCELERATED=true
BREV_INSTANCE_ID=your_brev_instance_id
EVALUATION_MODE=true
DEMO_MODE=false

# Model Configuration
NEMOTRON_MODEL=nemotron-70b-instruct
VISION_MODEL=neva-22b
EMBEDDING_MODEL=nemo-embedding-qa
FALLBACK_LLM_MODEL=meta/llama-3.1-405b-instruct

# GPU Optimization
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:128
GPU_MEMORY_FRACTION=0.8
ENABLE_MIXED_PRECISION=true
TORCH_COMPILE=true

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
CORS_ORIGINS=["*"]
MAX_REQUEST_SIZE=100MB

# Browser Automation
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30000
ENABLE_STEALTH_MODE=true
SCREENSHOT_QUALITY=85

# Database & Memory
DATABASE_URL=sqlite:///./agent_memory.db
MEMORY_WINDOW_SIZE=10
MAX_CONTEXT_LENGTH=8192
ENABLE_PERSISTENT_MEMORY=true

# Performance & Monitoring
LOG_LEVEL=INFO
ENABLE_GPU_MONITORING=true
ENABLE_PERFORMANCE_PROFILING=true
MAX_CONCURRENT_REQUESTS=4
BATCH_SIZE=32

# Content Processing
MAX_CONTENT_LENGTH=10000
ENABLE_SMART_SUMMARIZATION=true
PARALLEL_PROCESSING=true
ENABLE_OCR=true
IMAGE_RESIZE_MAX=1024

# Advanced Features
ENABLE_MULTIMODAL_FUSION=true
ENABLE_CHAIN_OF_THOUGHT=true
ENABLE_CITATION_TRACKING=true
TOKENIZERS_PARALLELISM=false